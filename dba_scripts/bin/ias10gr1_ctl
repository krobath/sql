    echo " "
    echo "+----------------+"
    echo "| MIDDLE-TIER    |"
    echo "|---------------------------------------------------------------------+"
    echo "| Status of Middle-Tier Components                                    |"
    echo "+---------------------------------------------------------------------+"
    echo " "

