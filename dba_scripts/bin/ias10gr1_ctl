    echo " "
    echo "+----------------+"
    echo "| MIDDLE-TIER    |"
    echo "|---------------------------------------------------------------------+"
    echo "| Starting Middle-Tier Components                                     |"
    echo "+---------------------------------------------------------------------+"
    echo " "

